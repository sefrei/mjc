{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lesson</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Début de la leçon</th>
                <td>{% if lesson.startAt %}{{ lesson.startAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Le professeur est présent</th>
                <td>{% if lesson.teacherIsPresent %}Oui{% else %}Non{% endif %}</td>
            </tr>
            <tr>
                <th>L'étudiant est présent</th>
                <td>{% if lesson.studentIsPresent %}Oui{% else %}Non{% endif %}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ lesson.appreciation }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lesson_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('lesson_edit', { 'id': lesson.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
