{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subscription.id }}</td>
            </tr>
			<tr>
				<th>Professeur</th>
				<td>{{subscription.teacher}}</td>
			</tr>
			<tr>
				<th>Elève</th>
				<td>{{subscription.student}}</td>
			</tr>
			<tr>
				<th>Spécialité</th>
				<td>{{subscription.specialties}}</td>
			</tr>
            <tr>
                <th>Début</th>
                <td>{% if subscription.startAt %}{{ subscription.startAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{% if subscription.finishAt %}{{ subscription.finishAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date d'inscription</th>
                <td>{% if subscription.subscriptionAt %}{{ subscription.subscriptionAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
			<tr>
				<th>Actions</th>
				<td>
                    <ul>
                        <li>
                            <a class="btn btn-warning"  href="{{ path('subscription_show', { 'id': subscription.id }) }}">modifier</a>
                        </li>
                        <li>
                            <a class="btn btn-delete"  href="{{ path('subscription_edit', { 'id': subscription.id }) }}">effacer</a>
                        </li>
                    </ul>
                </td>
			</tr>
        </tbody>
    </table>

    <ul>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-delete"  type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
