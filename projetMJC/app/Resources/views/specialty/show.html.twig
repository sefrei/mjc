{% extends 'base.html.twig' %}

{% block body %}
    <h1>Activité</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialty.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ specialty.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('specialty_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a href="{{ path('specialty_edit', { 'id': specialty.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
