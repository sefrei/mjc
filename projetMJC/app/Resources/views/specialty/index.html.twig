{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des activités</h1>
    <ul>
        <li>
            <a class="btn btn-new" href="{{ path('specialty_new') }}">Créer une nouvelle activité</a>
        </li>
    </ul>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for specialty in specialties %}
            <tr>
                <td><a href="{{ path('specialty_show', { 'id': specialty.id }) }}">{{ specialty.id }}</a></td>
                <td>{{ specialty.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-primary" href="{{ path('specialty_show', { 'id': specialty.id }) }}">voir</a>
                        </li>
                        <li>
                            <a class="btn btn-warning" href="{{ path('specialty_edit', { 'id': specialty.id }) }}">modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
