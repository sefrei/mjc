{
  "activities" : [
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
      {%for inscription in inscriptions%}
        {% for lesson in inscription.lessons %}
    		  {% if (app.user.id == inscription.teacher.id) or (app.user.id == inscription.student.id) %}
            {
              "activity_id" : {{ lesson.id }},
              "speciality" : "{{ inscription.specialties.name }}",
              "startDate" : "{{ lesson.startAt | date("d-m-Y") }}",
              "startHour" : "{{ lesson.startAt | date("H\\hi") }}",
              "finishHour" : "{{ inscription.finishAt | date("H\\hi") }}",
              "prof" : "{{ inscription.teacher.firstname }} {{ inscription.teacher.lastname }}",
              "duration": "30 minutes",
              "appreciation" : "{{lesson.appreciation}}",
              {% if lesson.teacherIsPresent %}
              "presenceTeacher" : true,
									{% else %}
              "presenceTeacher" : false,
									{% endif %}
              {% if lesson.studentIsPresent %}
              "presenceStudent" : true,
									{% else %}
              "presenceStudent" : false,
									{% endif %}
              "student" : "{{ inscription.student.firstname }} {{ inscription.student.lastname }}"
            }


            {% if loop.last %}{% else %}
            ,
            {% endif %}
            {% endif %}

        {% endfor %}


        {% endfor %}

  	{% endif %}
  ]
}
