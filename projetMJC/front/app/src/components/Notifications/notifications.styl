 @import "../var.styl"

#notifications
  text-align:right
  position: absolute
  right: 10px
  top: 0px

  &-title
    color: #FFF
    font-size: 1.2em
    margin-bottom: 0.3em
    padding: 0
    font-weight: 300
    font-family: font-flower

  &-messages
    text-align: left;
    background-color: #000
    color: #FFF
    padding: 1em;
    position: absolute;
    right: 20px;
    width: 378px;
    z-index: 0;
    //box-shadow: 5px 5px 15px -4px #a53577;
    z-index: 1;
    border-radius: 20px

    &-container
      position: absolute
      right: 40px
      top: 1em
      transition: all 1s;

  &-counter
    display: inline-block
    position: relative
    cursor: pointer
    z-index: 2
    color: #78d16f

    &-icon
      font-size: 3em
      position: absolute
      top: 15px
      right: 1px

    &-count
      position: absolute
      top: 12px
      right: -2px
      padding: 2px 4px;
      font-size: .8em
      display: inline-block;
      border-radius: 30%
      background: #78d16f
      border: 1px solid #FFF
      color: #FFF
      font-weight: bold
      z-index: 1
      user-select: none

.hide-notif
  //opacity: 0
  top: -120px!important
  //transform: rotate(270deg);

.close-notif
  margin-left: .5em

.active-counter
  color: #3fa535
  transition: color 1s

.notif i
  cursor: pointer

