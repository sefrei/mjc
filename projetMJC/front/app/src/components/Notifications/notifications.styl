 @import "../var.styl"

#notifications
  text-align:right
  position: absolute
  right: 10px
  top: 0px

  &-title
    color: #FFF
    font-size: 1.2em
    margin-bottom: 0.3em
    padding: 0
    font-weight: 300
    font-family: font-flower

  &-messages
    text-align: left;
    background-color: #db4168;
    padding: 1em;
    position: absolute;
    right: 20px;
    width: 378px;
    z-index: 0;
    //border: 1px solid #af2121
    box-shadow: 5px 5px 15px -4px #af2121;

    z-index: 1;
    &-container
      position: absolute
      right: 40px
      transition: all 1s;

  &-counter
    display: inline-block
    position: relative
    cursor: pointer
    z-index: 2
    color: #df80cb

    &-icon
      font-size: 3em
      position: absolute
      top: 1px
      right: 1px

    &-count
      position: absolute
      top: -2px
      right: -2px
      padding: 2px 4px;
      font-size: .8em
      display: inline-block;
      border-radius: 30%
      background: rgba(128,171,223,1);
      border: 1px solid #FFF
      color: #FFF
      font-weight: bold
      z-index: 1
      user-select: none

.hide-notif
  opacity: 0
  right: -550px!important
  transform: rotate(270deg);

.close-notif
  margin-left: .5em

.active-counter
  color: #9e2885
  transition: color 1s ease-in

