#notifications
  text-align:right
  margin-bottom: 10em
  position: relative

  &-title
    color: #FFF
    font-size: 1.2em
    margin-bottom: 0.3em

  &-messages
    float: right
    text-align: left
    background-color: rgba(215, 44, 44, 0.7);
    padding: 1em
    position: absolute
    right: 20px
    top: 30px
    border: 2px solid black
    z-index: 0
    transition: all 1s

  &-counter
    display: inline-block
    width: 80%
    margin: 1em auto
    padding: 1em 5%
    position: relative
    cursor: pointer

    &-count
      position: absolute
      top: 0
      right: 0
      padding: 10px 14px;
      display: inline-block;
      border-radius: 100px;
      box-shadow: 0px 0px 2px #888;
      background: red;
      border: 2px solid black
      color: #FFF
      font-weight: bold
      z-index: 1

.hide-notif
  opacity: 0
  right: -500px!important
  transform: rotate(90deg);
