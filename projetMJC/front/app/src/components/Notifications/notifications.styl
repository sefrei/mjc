#notifications
  text-align:right
  position: absolute
  right: 10px
  top: 0px

  &-title
    color: #FFF
    font-size: 1.2em
    margin-bottom: 0.3em
    padding: 0
    font-weight: 300
    font-family: 'Indie Flower', cursive;

  &-messages
    text-align: left
    background-color: rgba(215, 44, 44, 0.7);
    padding: 1em
    position: absolute
    right: 20px
    width: 350px
    border: 2px solid black
    z-index: 0
    transition: all 1s
    z-index: 1

  &-counter
    display: inline-block
    position: relative
    cursor: pointer
    z-index: 2

    &-count
      position: absolute
      top: 0
      right: 0
      padding: 10px 14px;
      display: inline-block;
      border-radius: 100px;
      box-shadow: 0px 0px 2px #888;
      background: red;
      border: 2px solid black
      color: #FFF
      font-weight: bold
      z-index: 1
      user-select: none

.hide-notif
  opacity: 0
  right: -550px!important
  transform: rotate(270deg);


.close-notif
  margin-left: .5em
