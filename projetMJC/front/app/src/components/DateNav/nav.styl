@import 'datepicker.styl'

#notebook-navigation
  text-align: center

.date-picker
  font-size: 1em;
  text-align: center
  border-radius: 4px;
  box-shadow: inset 0 2px 2px #e9e9e9;
  border: 1px solid #aeaeae;
  line-height: 16px;
  padding: 6px 10px 5px;
  width: 150px

.nav-arrow
  background: none
  border: none
  font-size: 2em
  transition: 1s
  color: #df80cb

#left-arrow
  float: left
  &:hover
    transform: rotate(-360deg)

#right-arrow
  float: right
  &:hover
    transform: rotate(360deg)

#date-title
  font-size: 2em
  margin: 1em auto
  text-transform: capitalize
