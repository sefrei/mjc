/* Mobile First CSS */
#activity-view
  text-align: center
  margin: 3em auto
  background: #FFF
  padding: 1em
  position: relative
  & p
    margin: .5em
  & .activity-statut
    position: absolute
    top:52px
    right:80px
    font-size: 1.1em
  & .presence
    float: right
    width: auto
    margin-top: -3em
#observation
  text-align: left
  background: #78d16f
  border-radius: 1em
  padding: 1em
  &-label
    margin-bottom: .5em
    text-transform: uppercase
    display: block
    &::first-letter
      text-transform: uppercase
  &-input
    width: 100%
    border: 1px solid black
    border-radius: 0
    padding: .5em
  & button
    background: #008000
    border: none
    color: #FFF
    padding: 0
    border-radius: 0 0 1em 1em
    &:active
      background: #2dbb1f
      & i
        background: #2dbb1f
    & i
      background: #1a661a
      padding: .5em
      border-radius: 0em 0em 0em 1em
    & span
      padding: .5em
#activity-title
  font-size: 1.5em
  margin: 1em auto

#infos-presence
  text-align: left

.agenda-home-link:hover
  color:#9b35a5

