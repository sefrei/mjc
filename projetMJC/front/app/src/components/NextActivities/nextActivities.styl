@import '../var.styl'

#nextActivities
  padding: 1em 1em 1em 2em
  background: rgba(128, 171, 223, 0.4)
  width: 400px
  & h1
    font-size: 1.5em
    color: #FFF
    padding: 0
    margin-bottom: .5em
    font-family: font-flower
    font-weight: normal

.dayActivities
  cursor: pointer
  margin: .2em
  display: inline-block
  &:first-letter
    text-transform: uppercase
  &:hover
    text-decoration: underline
