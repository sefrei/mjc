/* Desktop */
@media (min-width: 1000px)
  #activities
    padding: 1em 1em 1em 2em
    border-radius: 1em
    margin: 2em
  .activity
    border-radius: 1em
    &-hour
      &:after
        content: ' : '
/* Desktop HD */
@media (min-width: 1200px)
  .activity
    padding: .5em 0
    &-hour
      display: inline-block
      vertical-align: middle
      margin-right: .2em

