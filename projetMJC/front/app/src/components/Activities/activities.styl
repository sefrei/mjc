/* Mobile First CSS */
#activities
  background: #3fa535
  color: #333333

.activity
  margin: .5em auto
  padding: .5em
  display: inline-block
  background: #78d16f
  width: 100%
  position: relative
  &:first-child
    margin-top: 1em
  &:last-child
    margin-bottom: 1em
  &-infos
    display: inline-block
    font-size: 0.9em
    margin-left: 1em
    & div
      display: inline-block
      vertical-align: middle
  &-link
    position: absolute
    right: 10px
    top: 6px
    &:hover
      color:#9b35a5

.show-activity-button
  background: none
  border: none
  border: 1px solid #000
  font-size: .9em
  margin-left: 1em
  color: #000
  padding: .2em .5em
  height: 40px
  width: 60px
  &:hover
    background: #9b35a5
    border-color: #9b35a5
    color: #FFF
#no-activity-title
  text-align: center
  text-transform: uppercase
/* Mobile + */
//@media (min-width: 400px)

/* Phablets */
@media (min-width: 550px)
  .activity
    &-infos
      font-size: 1em
    &-link
      right: 80px
  .show-activity-button
    height: 40px
/* Tablettes */
@media (min-width: 750px)
  .activity
    height: 36px
    &-infos
      line-height: 2em
  .show-activity-button
    height: 25px
/* Desktop */
@media (min-width: 1000px)
  #activities
    padding: 1em 1em 1em 2em
    border-radius: 1em
    margin: 2em auto
    width: 90%
  .activity
    border-radius: 1em
    overflow: hidden
    &-hour
      &:after
        content: ' : '
  .show-activity-button
    margin: auto auto auto .5em
/* Desktop HD */
@media (min-width: 1200px)
  #activities
    width: 80%

