/* Mobile First CSS */
#activities
  background: #3fa535
  color: #333333

.activity
  margin: .5em auto
  padding: .5em
  display: inline-block
  background: #78d16f
  width: 100%
  text-align: center
  &:first-child
    margin-top: 1em
  &:last-child
    margin-bottom: 1em

  &-link
    vertical-align: middle
    width: auto
    display:inline-block
    margin: .5em auto
    &:hover
      color:#9b35a5

.show-activity-button
  background: none
  border: 1px solid
  margin-left: 1em
  color: #000
  padding: .2em .5em
  &:hover
    background: #9b35a5
    border-color: #9b35a5
    color: #FFF

